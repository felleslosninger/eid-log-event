<?xml version="1.0"?>
<ruleset name="idporten-log-event PMD ruleset"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>
        This ruleset defines the PMD rules for project "idporten-log-event".
    </description>

    <!-- This file is auto-generated so no need to check it -->
    <exclude-pattern>.*/no/idporten/logging/event/EventRecord.*</exclude-pattern>
    <!-- These files are copied from confluent in order to run local kafka in unit/integration-testing -->
    <exclude-pattern>.*/io/confluent/examples/streams/*.*</exclude-pattern>

    <rule ref="category/java/codestyle.xml">
        <exclude name="AtLeastOneConstructor"/>
        <exclude name="LongVariable"/>
        <exclude name="CommentDefaultAccessModifier"/>
        <exclude name="MethodArgumentCouldBeFinal"/>
        <exclude name="LocalVariableCouldBeFinal"/>
        <exclude name="TooManyStaticImports"/>
        <exclude name="OnlyOneReturn"/>
        <exclude name="ConfusingTernary"/>
        <exclude name="DefaultPackage"/>
    </rule>
    <rule ref="category/java/bestpractices.xml">
        <exclude name="GuardLogStatement"/>
        <exclude name="JUnitTestContainsTooManyAsserts"/>
        <exclude name="JUnitTestsShouldIncludeAssert"/>
    </rule>
    <rule ref="category/java/errorprone.xml">
        <exclude name="BeanMembersShouldSerialize"/>
        <exclude name="NullAssignment"/>
        <exclude name="AvoidDuplicateLiterals"/>
        <exclude name="UseProperClassLoader"/>
    </rule>
    <!-- many more rules are available at https://pmd.github.io/pmd-6.38.0/pmd_rules_java.html -->
</ruleset>